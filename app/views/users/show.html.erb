<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>


<p>
  <strong>Role:</strong>
  <%= @user.try(:role).try(:name) %>
</p>

<p>
  <strong>Admin:</strong>
  <% if @user.admin == false %>
  <%= "Not Admin" %> 
  <% end %>
  <% if @user.admin == true %>
  <%= " You are an Admin" %>
  <% end %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
